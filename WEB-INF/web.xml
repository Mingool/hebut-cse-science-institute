<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  <servlet>
    <servlet-name>NewsAction</servlet-name>
    <servlet-class>com.giraffe.action.NewsAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowNewsAction</servlet-name>
    <servlet-class>com.giraffe.action.ShowNewsAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminLoginAction</servlet-name>
    <servlet-class>com.giraffe.action.LoginAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShopAction</servlet-name>
    <servlet-class>com.giraffe.action.ShopAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminAddNewsAction</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminAddNewsAction</servlet-class>
    <init-param>
      <param-name>filepath</param-name>
      <param-value>uploadNewsPic</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>AdminListNewsAction</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminListNewsAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminDeleteNewsAction</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminDeleteNewsAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminEditNewsAction</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminEditNewsAction</servlet-class>
    <init-param>
      <param-name>filepath</param-name>
      <param-value>uploadNewsPic</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>MessageAction</servlet-name>
    <servlet-class>com.giraffe.action.MessageAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminMessageAction</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminMessageAction</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminLogout</servlet-name>
    <servlet-class>com.giraffe.action.admin.AdminLogout</servlet-class>
  </servlet>
  <filter>
    <filter-name>securityAndDeny</filter-name>
    <filter-class>com.giraffe.filter.AdminFilter</filter-class>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>gotoUrl</param-name>
      <param-value>/login.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>securityAndDeny</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>NewsAction</servlet-name>
    <url-pattern>/news</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowNewsAction</servlet-name>
    <url-pattern>/shownews</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminLoginAction</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShopAction</servlet-name>
    <url-pattern>/shop</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminAddNewsAction</servlet-name>
    <url-pattern>/admin/addNews</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminListNewsAction</servlet-name>
    <url-pattern>/admin/news</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminDeleteNewsAction</servlet-name>
    <url-pattern>/admin/deleteNews</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminEditNewsAction</servlet-name>
    <url-pattern>/admin/editNews</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MessageAction</servlet-name>
    <url-pattern>/message</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminMessageAction</servlet-name>
    <url-pattern>/admin/usermessage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminLogout</servlet-name>
    <url-pattern>/admin/logout</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>